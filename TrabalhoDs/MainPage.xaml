

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class=".MainPage.xaml"
             Title="Tela de Cadastro">

    <ScrollView>
        <StackLayout Padding="10">
            <Entry x:Name="NomeCompleto" Placeholder="Nome Completo" Margin="0,10,0,0"/>
            <Entry x:Name="Email" Placeholder="E-mail" Margin="0,10,0,0"/>
            <Entry x:Name="Senha" Placeholder="Senha" IsPassword="True" Margin="0,10,0,0"/>
            <Entry x:Name="DataNascimento" Placeholder="Data de Nascimento" Margin="0,10,0,0"/>
            <Entry x:Name="CPF" Placeholder="CPF" Margin="0,10,0,0"/>
            <Entry x:Name="Genero" Placeholder="Gênero" Margin="0,10,0,0"/>
            <Entry x:Name="Telefone" Placeholder="Telefone" Margin="0,10,0,0"/>
            <Entry x:Name="Sms" Placeholder="Sms" Margin="0,10,0,0"/>
            <Entry x:Name="Endereco" Placeholder="Endereço" Margin="0,10,0,0"/>
            <Entry x:Name="NumeroMEI" Placeholder="Número do MEI" Margin="0,10,0,0"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Apagar" Clicked="ClearFields" Margin="0,0,10,0"/>
                <Button Text="Cadastrar" Margin="10,0,0,0"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
    
</ContentPage>
